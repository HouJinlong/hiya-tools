{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "keyofStringsOnly": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "target": "es3",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src","@types"],
  "exclude": ["node_modules", "dist"]
}
